@page
@model Razorpages.Pages.Employees.IndexModel
@{
}

<h1>Employees</h1>
<h3>Total Employees=@Model.employees.Count()</h3>

<div class="card-deck">
    @foreach (var employee in Model.employees)
    {
        var picPath = "~/Images/" + (employee.PhotoPath ?? "noImage.jpg");

        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@picPath" asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-ID="@employee.Id" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
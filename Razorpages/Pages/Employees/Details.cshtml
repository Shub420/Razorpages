@page "{id}"
@model Razorpages.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Details";
    var picPath = "~/Images/" + (Model.Employee.PhotoPath ?? "noImage.jpg");

}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail"  src="@picPath" asp-append-version="true" />

                <h4>Employee Id:@Model.Employee.Id</h4>
                <h4>Employee Email:@Model.Employee.Email</h4>
                <h4>Employee Department:@Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-page="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>
